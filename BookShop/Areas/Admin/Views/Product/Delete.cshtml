@model Product

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2>Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Title" disabled class="p-1"> </label>
            <input asp-for="Title" class="form-control" />
          
        <div class="mb-3 row">
                <label asp-for="Description" disabled class="p-1"> </label>
            <input asp-for="Description" class="form-control" />
            
        </div>
        <div class="mb-3 row">
                <label asp-for="ISBN" disabled class="p-1"> </label>
            <input asp-for="ISBN" class="form-control" />
           
        </div>
        <div class="mb-3 row">
                <label asp-for="Author" disabled class="p-1"> </label>
            <input asp-for="Author" class="form-control" />
           
        </div>
        <div class="mb-3 row">
                <label asp-for="ListPrice" disabled class="p-1"> </label>
            <input asp-for="ListPrice" class="form-control" />
           
        </div>
        <div class="mb-3 row">
                <label asp-for="Price" disabled class="p-1"> </label>
            <input asp-for="Price" class="form-control" />
            
        </div>
        <div class="mb-3 row">
                <label asp-for="Price50" disabled class="p-1"> </label>
            <input asp-for="Price50" class="form-control" />
        
        </div>
        <div class="mb-3 row">
            <label asp-for="Price100" disabled class="p-1"> </label>
            <input asp-for="Price100" class="form-control" />
      
        </div>

        <div class="row">
            <div class="col-6 col-mb-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-mb-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
